<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carrito"
                style="@style/TextAppearance.Shoppersa.Title"
                android:padding="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total: $0"
                    style="@style/TextAppearance.Shoppersa.TitleSm" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pagar"
                    style="@style/Widget.Shoppersa.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRequestShipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solicitar envío"
                    android:visibility="gone"
                    style="@style/Widget.Shoppersa.Button.Info" />
            </LinearLayout>

        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/stateLoading"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/stateError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error al cargar"
        android:layout_gravity="center"
        android:visibility="gone"
        style="@style/TextAppearance.Shoppersa.Body" />

    <TextView
        android:id="@+id/stateEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu carrito está vacío"
        android:layout_gravity="center"
        android:visibility="gone"
        style="@style/TextAppearance.Shoppersa.Body" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>