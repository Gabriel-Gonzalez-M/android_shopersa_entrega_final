<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card"
    android:padding="12dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtOrderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pedido #—"
            style="@style/TextAppearance.Shoppersa.Title" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:clickable="false"
            android:checkable="false"
            app:chipCornerRadius="8dp"
            app:chipStrokeWidth="0dp"
            app:chipBackgroundColor="@android:color/darker_gray"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0 CLP"
        style="@style/TextAppearance.Shoppersa.Body" />

    <!-- Campos adicionales del encabezado -->
    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha: —"
        style="@style/TextAppearance.Shoppersa.BodyMuted" />

    <TextView
        android:id="@+id/txtProductCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productos: —"
        style="@style/TextAppearance.Shoppersa.BodyMuted" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección: —"
        style="@style/TextAppearance.Shoppersa.BodyMuted" />

    <!-- Estado complementario: aceptación y envío, mostrados como chips -->
    <LinearLayout
        android:id="@+id/chipsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/txtAcceptedState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto pendiente"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:clickable="false"
            android:checkable="false"
            app:chipCornerRadius="8dp"
            app:chipStrokeWidth="0dp"
            android:layout_marginRight="8dp"
            app:chipBackgroundColor="@android:color/darker_gray" />

        <com.google.android.material.chip.Chip
            android:id="@+id/txtShippingState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En espera"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:clickable="false"
            android:checkable="false"
            app:chipCornerRadius="8dp"
            app:chipStrokeWidth="0dp"
            app:chipBackgroundColor="@android:color/darker_gray" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRequestShipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar envío"
        android:visibility="gone"
        style="@style/Widget.Shoppersa.Button.Info" />

    <TextView
        android:id="@+id/btnToggleDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver detalles"
        android:textColor="@color/brand_primary"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:id="@+id/containerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtProductsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Productos ordenados"
            style="@style/TextAppearance.Shoppersa.TitleSm"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>

</LinearLayout>