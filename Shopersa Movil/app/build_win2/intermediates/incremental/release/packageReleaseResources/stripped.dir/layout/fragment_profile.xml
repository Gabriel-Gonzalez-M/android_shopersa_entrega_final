<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header avatar + nombre/email/teléfono/dirección -->
        <LinearLayout
            android:id="@+id/cardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/placeholder_rect"
            android:padding="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/avatarView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:text="?"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_avatar"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    style="@style/TextAppearance.Shoppersa.Title" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    style="@style/TextAppearance.Shoppersa.Body" />

                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    style="@style/TextAppearance.Shoppersa.Body" />

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    style="@style/TextAppearance.Shoppersa.Body" />
            </LinearLayout>
        </LinearLayout>

        <!-- Chips de rol/estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/chipRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="rol"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/placeholder_rect" />

            <TextView
                android:id="@+id/chipStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="status"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/placeholder_rect" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Actualizar datos"
            style="@style/Widget.Shoppersa.Button" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Cerrar sesión"
            style="@style/Widget.Shoppersa.Button.Danger" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            style="@style/TextAppearance.Shoppersa.Meta" />
    </LinearLayout>
</ScrollView>
